{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@": ["./"],
      "@/app/*": ["./app/*"],
      "@/components/*": ["./components/*"],
      "@/clientOnly/*": ["./clientOnly/*"],
      "@/styles/*": ["./styles/*"],
      "@/utils/*": ["./utils/*"],
      "@/public/*": ["./public/*"],
      "*.priompt.tsx": ["types/empty-export.ts"]
    },
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    ".next/types/**/*.ts",
    "jest.config.js",
    "types/ignore-priompt.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.priompt.tsx",
    "**/*.priompt.jsx",
  ]
}